# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/jwt-auth-app
MONGODB_URI_TEST=mongodb://localhost:27017/jwt-auth-app-test

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRATION=1h
JWT_REFRESH_SECRET=your_refresh_token_secret_change_this_in_production
JWT_REFRESH_EXPIRATION=7d

# Security
COOKIE_SECRET=your_cookie_secret_change_this_in_production
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=15 * 60 * 1000 # 15 minutes
RATE_LIMIT_MAX=100 # limit each IP to 100 requests per windowMs

# Email Configuration (for password reset)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@yourapp.com

# Logging
LOG_LEVEL=info

# API
API_PREFIX=/api

# Session
SESSION_SECRET=your_session_secret_change_this_in_production

# Frontend URLs
FRONTEND_URL=http://localhost:3000
PASSWORD_RESET_URL=http://localhost:3000/reset-password

# Feature Flags
ENABLE_RATE_LIMITING=true
ENABLE_LOGGING=true
ENABLE_ANALYTICS=false